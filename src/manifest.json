{
	"manifest_version": 3,
	"name": "Manga Downloader+",
	"short_name" : "Manga DL+",
	"version": "4.0.2",

	"description": "Download Manga/Manhua/Manhwa/Webtoons/Comics chapters as PDF/ZIP(images) from many websites.",

	"icons": {
		"48": "icons/md-48.png",
		"96": "icons/md-96.png",
		"128": "icons/md-128.png"
	},
	"action": {
		"default_title": "Manga Downloader+"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"permissions" : [
		"storage",
		"declarativeNetRequestWithHostAccess"
	],
	"host_permissions" : [
		"https://*.chapmanganato.to/*",
		"https://*.chapmanganelo.com/*",
		"https://*.imgur.com/*",
		"https://*.imageshack.com/*",
		"https://*.klimv1.xyz/*",
		"https://*.lastation.us/*",
		"https://*.leanbox.us/*",
		"https://*.mangaclash.com/*",
		"https://*.mangafox.me/*",
		"https://*.mangahere.org/*",
		"https://*.mangakomicdn.com/*",
		"https://*.manhuaplus.com/*",
		"https://*.manhuaus.com/*",
		"https://*.mkklcdnv6temp.com/*",
		"https://*.mkklcdnv6tempv2.com/*",
		"https://*.mkklcdnv6tempv3.com/*",
		"https://*.mkklcdnv6tempv4.com/*",
		"https://*.mkklcdnv6tempv5.com/*",
		"https://*.mncdnbuv1.com/*",
		"https://*.pstatic.net/*",
		"https://*.sailmg.com/*",
		"https://*.toonily.com/*",
		"https://*.uqni.net/*"
	],
	"optional_host_permissions" : [
		"https://*/*"
	],
	"content_scripts": [ {
		"matches": [
			"*://mangakiss.org/*",
			"*://mangakomi.io/*",
			"*://mangakakalot.com/*",
			"*://*.manganelo.com/*",
			"*://chapmanganelo.com/*",
			"*://manganato.com/*",
			"*://chapmanganato.to/*",
			"*://*.readnaruto.com/*",
			"*://*.tokyoghoulre.com/*",
			"*://*.readhaikyuu.com/*",
			"*://*.readopm.com/*",
			"*://*.readonepiece.com/*",
			"*://*.readsnk.com/*",
			"*://*.readfairytail.com/*",
			"*://*.readblackclover.com/*",
			"*://*.readbleachmanga.com/*",
			"*://*.readneverland.com/*",
			"*://*.readkingdom.com/*",
			"*://*.readvinlandsaga.com/*",
			"*://*.readmha.com/*",
			"*://*.readkaguyasama.com/*",
			"*://*.readjujutsukaisen.com/*",
			"*://*.readchainsawman.com/*",
			"*://*.demonslayermanga.com/*",
			"*://*.read7deadlysins.com/*",
			"*://*.readsololeveling.org/*",
			"*://*.readhxh.com/*",
			"*://*.readberserk.com/*",
			"*://*.readdrstone.com/*",
			"*://*.dbsmanga.com/*",
			"*://*.readkagurabachimanga.com/*",
			"*://*.readichithewitch.com/*",
			"*://*.bluelockread.com/*",
			"*://*.readjojos.com/*",
			"*://*.readsakadays.com/*",
			"*://*.readundead.com/*",
			"*://*.readtokyorevengers.net/*",
			"*://kiryuu.org/*",
			"*://mangadex.org/*",
			"*://mangasee123.com/*",
			"*://www.webtoons.com/*",
			"*://manga4life.com/*",
			"*://www.sailmg.com/*",
			"*://toonily.com/*",
			"*://manhuaus.com/*",
			"*://mangatx.to/*",
			"*://toonclash.com/*",
			"*://www.mangatown.com/*",
			"*://manhuaplus.com/*",
			"*://klz9.com/*",
			"*://fanfox.net/*"
		],
		"js": [
			"External/pdf-lib.js",
			"External/jszip.js",
			"functions.js",
			"Scripts/template.js",
			"Scripts/mangakiss.js",
			"Scripts/mangakakalot.js",
			"Scripts/manganelo.js",
			"Scripts/readopm.js",
			"Scripts/readblackclover.js",
			"Scripts/kiryuu.js",
			"Scripts/mangadex.js",
			"Scripts/mangasee123.js",
			"Scripts/webtoons.js",
			"Scripts/mangasail.js",
			"Scripts/mangatown.js",
			"Scripts/loveheaven.js",
			"Scripts/fanfox.js",
			"index.js"
		],
		"css": ["Styles/md-style.css"]
	} ],
